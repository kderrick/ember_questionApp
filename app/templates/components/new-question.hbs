{{#if addNewQuestion}}
<h1>New Rental</h1>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="details">Details</label>
      {{input value=details id="details"}}
    </div>

    <button {{action 'save'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
