{{#if updateQuestionForm}}
<h3>Update {{question.title}} by {{question.author}}</h3>
<form>
  <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" placeholder=question.title}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=question.author}}
    </div>

    <div class="form-group">
      <label for="details">Details</label>
      {{input value=details id="details" placeholder=question.details}}
    </div>

  <button {{action 'update' question}}>Save</button>
</form>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
